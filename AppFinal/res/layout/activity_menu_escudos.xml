<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <RatingBar
            android:id="@+id/ratingBarTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:numStars="3" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtContadorBankias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageBankia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="3" >

        <ImageButton
            android:id="@+id/Verado"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/Losanjado"
            android:layout_column="2"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/Fuselado"
            android:layout_column="3"
            android:layout_marginRight="20dp"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/Cantonado"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_row="1"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/Fretado"
            android:layout_column="2"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="1"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/Papelonado"
            android:layout_column="3"
            android:layout_row="1"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/Aplumado"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_row="2"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/Flanqueado"
            android:layout_column="2"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="2"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/Cortinado"
            android:layout_column="3"
            android:layout_row="2"
            android:src="@drawable/ic_launcher" />
    </GridLayout>

    <LinearLayout
        android:layout_width="148dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtVictoriaOrdenador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Victorias Ordenador" />

        <TextView
            android:id="@+id/txtContadorVictoriasOrdenador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/Batalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:onClick="batallaOFinDeJuego"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/salir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="salir"
            android:src="@drawable/ic_launcher" />

    </LinearLayout>

</LinearLayout>